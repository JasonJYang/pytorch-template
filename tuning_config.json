{
    "name": "Mnist_LeNet",
    "n_gpu": 1,

    "data_loader": {
        "type": "MnistDataLoader",
        "args":{
            "data_dir": "data/",
            "batch_size": 128,
            "shuffle": true,
            "validation_split": 0.1,
            "test_split": 0.2,
            "num_workers": 2,
            "seed": 0
        }
    },

    "optimizer": {
        "type": "Adam",
        "args":{
            "lr": 0.001,
            "weight_decay": 0,
            "amsgrad": true
        }
    },

    "loss": "nll_loss",
    "metrics": [
        "accuracy", "top_k_acc"
    ],

    "lr_scheduler": {
        "type": "StepLR",
        "args": {
            "step_size": 50,
            "gamma": 0.1
        }
    },

    "trainer": {
        "epochs": 10,
        "save_dir": "saved/",
        "save_period": 1,
        "verbosity": 2,
        "cpus_per_trial": 2,
        "gpus_per_trial": 1
    }
}
